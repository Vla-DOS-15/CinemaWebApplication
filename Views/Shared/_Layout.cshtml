<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaWebApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CinemaWebApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item header_button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("User"))
                            {
@*                                 <li class="nav-item header_button">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Cart"><i class="fa fa-shopping-cart" style="font-size: 20px"></i> Кошик</a>
                                </li> *@

                            }

                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item header_button">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Users">Керування користувачами</a>
                                </li>

                                <li class="nav-item header_button">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Addcategory">Додати категорію</a>
                                </li>

                                <li class="nav-item header_button">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AddSubcategory">Додати підкатегорію</a>
                                </li>
                            }

                            <li class="nav-item header_button">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item header_button">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out" style="font-size: 20px"></i> Вийти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item header_button" style="margin-left: auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in" style="font-size: 20px"></i> Увійти</a>
                            </li>
                            <li class="nav-item header_button">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus" style="font-size: 20px"></i> Зареєструватись</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CinemaWebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
