@model CinemaWebApplication.Models.Screening

@{
    ViewData["Title"] = "Delete Screening";
}

<h2>Delete Screening</h2>

<h4>Are you sure you want to delete this?</h4>
<hr />
<div>
    <h4>Screening</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Title
        </dd>
        <dt class="col-sm-2">
            Screening Time
        </dt>
        <dd class="col-sm-10">
            @Model.ScreeningTime
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
